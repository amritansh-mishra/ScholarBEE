# 🚀 ScholarBEE Backend Environment Configuration
# Copy this file to .env and fill in your actual values

# 🌐 Server Configuration
PORT=3000
HOST=localhost
NODE_ENV=development

# 🔗 Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# 🗄️ Database Configuration
MONGODB_URI=mongodb://localhost:27017/scholarbee
# For production, use: mongodb+srv://username:password@cluster.mongodb.net/scholarbee

# 🔐 JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=24h

# 📧 Email Configuration (for password reset, notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@scholarbee.com

# 🔒 Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# 📊 Logging Configuration
LOG_LEVEL=debug
LOG_FILE=logs/app.log

# 🚀 API Configuration
API_VERSION=v1
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100 