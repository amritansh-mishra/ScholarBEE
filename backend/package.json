{
  "name": "scholarbee",
  "version": "1.0.0",
  "description": "ScholarBEE - Empowering students through scholarships",
  "main": "app.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test-connection": "node test-connection.js",
    "setup": "echo 'Setting up ScholarBEE...' && npm run dev",
    "backend": "cd backend && npm start",
    "frontend": "cd frontend && npm run dev",
    "install-all": "cd backend && npm install && cd ../frontend && npm install",
    "clean": "rm -rf backend/node_modules frontend/node_modules backend/.env frontend/.env"
  },
  "keywords": [
    "scholarship",
    "education",
    "fullstack",
    "react",
    "nodejs",
    "mongodb"
  ],
  "author": "ScholarBEE Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/scholarbee.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/scholarbee/issues"
  },
  "homepage": "https://github.com/your-username/scholarbee#readme",
  "dependencies": {
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.1.0",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.16.2",
    "xss": "^1.0.15"
  }
}
